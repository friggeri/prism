{
  "name": "pvc-vscode-theme",
  "displayName": "PVC",
  "description": "A colorful light/dark theme",
  "license": "mit",
  "repository": {
    "url": "https://github.com/friggeri/pvc"
  },
  "version": "1.0.8",
  "engines": {
    "vscode": "^1.58.0"
  },
  "categories": [
    "Themes"
  ],
  "watch": {
    "build:dev": "src/pvc.yaml"
  },
  "scripts": {
    "build": "ts-node src/build.ts",
    "build:dev": "ts-node --transpile-only src/build.ts",
    "watch": "npm-watch"
  },
  "publisher": "friggeri",
  "contributes": {
    "themes": [
      {
        "label": "PVC (Dark)",
        "uiTheme": "vs-dark",
        "path": "./themes/pvc-dark-color-theme.json"
      },
      {
        "label": "PVC (Light)",
        "uiTheme": "vs",
        "path": "./themes/pvc-light-color-theme.json"
      }
    ]
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^17.0.17",
    "@types/tinycolor2": "^1.4.3",
    "js-yaml": "^4.1.0",
    "npm-watch": "^0.11.0",
    "tinycolor2": "^1.4.2",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
}
